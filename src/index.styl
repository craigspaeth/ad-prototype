@require '../node_modules/nib'

global-reset()
large-margin = 50px
medium-margin = 30px
small-margin = 20px
gray-color = rgb(128, 128, 128)
blue-color = rgb(51, 107, 190)
video-easing = cubic-bezier(0.420, 0.000, 0.580, 1.000)

@font-face
  font-family: Benton
  src: url('fonts/book.woff') format('woff')

@font-face
  font-family: Benton
  src: url('fonts/light.woff') format('woff')
  font-weight: 200

@font-face
  font-family: Benton
  src: url('fonts/bold.woff') format('woff')
  font-weight: bold

*
  color: gray-color
  box-sizing: border-box
  font-family: Benton, sans-serif
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale

.video-container
  position: absolute
  height: 100vh
  width: 100vw
  top: 0
  right: 0
  overflow: hidden
  transition: all 500ms video-easing
  box-shadow: 0px 0px 20px rgba(0,0,0,0.2)
  z-index: 2
  &.shrink
    height: calc(100vh \- 200px)
    width: calc(100vh \- 200px)
    right: large-margin + medium-margin
    top: large-margin * 2
  video
    position: absolute
    min-width: 100%
    min-height: 100%
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

.header
  position: absolute
  max-width: calc(50vw \- 100px)
  top: 50%
  transform: translateY(-50%)
  left: large-margin
  line-height: 1.4em
  z-index 1
  &.active
    h1, h3, .header-link
      opacity: 1
      left: 0
  h1
    font-size: 35px
    line-height: 40px
    font-weight: 200
    margin-top: small-margin
    margin-bottom: large-margin
    position: relative
    left: -80px
    transition: all 500ms ease-out
    opacity 0
  h3
    color: blue-color
    font-weight: bold
  h3, .header-link
    opacity 0
    position: relative
    left: -40px
    transition: all 500ms ease-out
  .header-link
    background: url(arrow.png) no-repeat calc(100% - 7px) center
    padding-right: 45px
    cursor: pointer
    transition: background-position-x 300ms
    &:hover
      background-position-x: 100%

.color-block
  width: calc(100vh - 150px)
  height: calc(100vh - 70px)
  position: absolute
  z-index: -1
  bottom: 0
  right: 0
  background-color: blue-color
  transition: all 0.5s ease-in-out
  transform: scaleX(0)
  transform-origin: left
  &.active
    transform: scaleX(1)

.nav
  width: 100%
  font-size: 22px
  font-weight: 200
  height: large-margin
  padding: medium-margin large-margin
  z-index 3
  position: absolute
  a, .logo
    margin-right: medium-margin
  .logo
    display: inline-block
    path
      fill: white
      transition: fill 0.5s 
    &.active path
      fill: #FF5A00
    

.right-nav
  position: absolute
  right: medium-margin
  top: (large-margin * 2) + medium-margin
  a
    position: relative
    display: block
    margin-bottom: large-margin
    color: white
    font-weight: 200
    cursor: pointer
    &:before, &.active:before
      content: '.'
      color: transparent
      width: 0px
      height: 1px
      top: 7px
      right: -(medium-margin)
      background: white
      position: absolute
      transition: width 200ms ease-out
    &:hover:before, &.active:before
      width: medium-margin * 2

.loader
  z-index: 4
  width: 100%
  height: 100%
  position: absolute
  top: 0
  left: 0
  line-height: 100vh
  background: white
  text-align: center
  transition: opacity 500ms ease-in-out
  &.finished
    opacity: 0